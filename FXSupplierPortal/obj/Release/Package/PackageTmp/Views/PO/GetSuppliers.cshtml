
@model IEnumerable<FXSupplierPortal.Supplier>

@{
    ViewBag.Title = "Purchase Order";
    Layout = null;
    WebGrid webGrid = new WebGrid(source: Model, canPage: false, selectionFieldName: "SupplierName", canSort: false);
}
<script src="~/Scripts/jquery.dataTables.js"></script>
<link href="~/Content/jquery.dataTables.css" rel="stylesheet"/>
@Styles.Render("~/Content/webgridstyle.css")
@Scripts.Render("~/bundles/jqueryui")
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <p>Select Supplier from the list</p>

    <script>
        $(document).ready(function () {
            $("#supplierWebGrid").dataTable().fnDestroy();
            $("#supplierWebGrid thead").find("tr:gt(0)").remove();
            $('#supplierWebGrid thead tr').clone(true).appendTo('#supplierWebGrid thead');
            
            $('#supplierWebGrid thead tr:eq(1) th').each(function (i) {
                var title = $(this).text();
                if (i == 0) {
                    $(this).html('<input type="text" style="display:none; width:100%; font-size:11px;" placeholder=" ' + title + '" />');
                    $(this).removeClass('sorting_asc');
                }
                else {
                    $(this).html('<input type="text" style="width:100%; font-size:11px;" placeholder=" ' + title + '" />');
                }
                $('input', this).on('keyup change', function () {
                    if (table.column(i).search() !== this.value) {
                        table.column(i).search(this.value).draw();
                    }
                });
            });
            
            var table = $('#supplierWebGrid').DataTable({
                orderCellsTop: true,
                fixedHeader: true
            });
        });

        setTimeout(function () {
            $("#supplierWebGridDiv").show();
        }, 0);

        function setSupplier(supplierId, SupplierName) {
            $("#po_VENDORID").val(supplierId);
            $("#po_VENDORNAME").val(SupplierName);
             //$("#supplierWebGrid").dataTable().fnDestroy();
            $("#GetSuppliers").dialog('close');
        }
    </script>
</head>
<body>
    <div id="supplierWebGridDiv" style="display:none">
     <form id="myForm">
            <div id='GetSuppliers'>
                @webGrid.GetHtml(
               htmlAttributes: new { @id = "supplierWebGrid" },
               tableStyle: "webgrid-table",
               headerStyle: "webgrid-header",
               footerStyle: "webgrid-footer",
               alternatingRowStyle: "webgrid-alternating-row",
               selectedRowStyle: "webgrid-selected-row",
               rowStyle: "webgrid-row-style",
               mode: WebGridPagerModes.All,
               columns: webGrid.Columns(
                    webGrid.Column("Select", "Select", format: @<text><a href="#" onclick="setSupplier('@item.SupplierID','@item.SupplierName');" + style="color: blue;text-decoration: underline;">Select</a></text>),
                         webGrid.Column("SupplierID", "SupplierID"),
                         webGrid.Column("SupplierName", "SupplierName"),
                         webGrid.Column("SupplierType", "SupplierType"),
                         webGrid.Column("RegDocID", "RegDocID")
                         ))
            </div>

        </form>
    </div>
</body>

</html>




