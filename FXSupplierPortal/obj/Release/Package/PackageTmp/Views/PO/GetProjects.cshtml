
@model IEnumerable<FXSupplierPortal.FIRMS_GetAllProjects_Result>

@{
    ViewBag.Title = "Purchase Order";
    Layout = null;
    WebGrid webGrid = new WebGrid(source: Model.ToList(), canPage: false, selectionFieldName: "depm_desc", canSort: false);
}
<script src="~/Scripts/jquery.dataTables.js"></script>
<link href="~/Content/jquery.dataTables.css" rel="stylesheet" />
@Styles.Render("~/Content/webgridstyle.css")
@Scripts.Render("~/bundles/jqueryui")
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script>
        $(document).ready(function () {
             
            $("#ProjectWebGrid").dataTable().fnDestroy();
            $("#ProjectWebGrid thead").find("tr:gt(0)").remove();
            $('#ProjectWebGrid thead tr').clone(true).appendTo('#ProjectWebGrid thead');

            $('#ProjectWebGrid thead tr:eq(1) th').each(function (i) {
                var title = $(this).text();
                if (i == 0) {
                    $(this).html('<input type="text" style="display:none; width:100%; font-size:11px;" placeholder=" ' + title + '" />');
                    $(this).removeClass('sorting_asc');
                }
                else {
                    $(this).html('<input type="text" style="width:100%; font-size:11px;" placeholder=" ' + title + '" />');
                }
                $('input', this).on('keyup change', function () {
                    if (table.column(i).search() !== this.value) {
                        table.column(i).search(this.value).draw();
                    }
                });
            });
            

            var table = $('#ProjectWebGrid').DataTable({
                orderCellsTop: true,
                fixedHeader: true //,
                ////"bDestroy": true,
                //destroy: true
                //Ordering: false
            });
        });

        setTimeout(function () {
            $("#projectWebGridDiv").show();
        }, 10);

        function setProject(projectCode, projectName) {
            $("#po_PROJECTNAME").val(projectName);
            $("#po_PROJECTCODE").val(projectCode);
            $("#GetProjects").dialog('close');
        }
    </script>
</head>
<body>
    <div id="projectWebGridDiv" style="display:none">
        <form id="myForm">
            <div id='GetProjects'>
                @webGrid.GetHtml(
               htmlAttributes: new { @id = "ProjectWebGrid" },
               tableStyle: "webgrid-table",
               headerStyle: "webgrid-header",
               footerStyle: "webgrid-footer",
               alternatingRowStyle: "webgrid-alternating-row",
               selectedRowStyle: "webgrid-selected-row",
               rowStyle: "webgrid-row-style",
               mode: WebGridPagerModes.All,
               columns: webGrid.Columns(
                    webGrid.Column("Select", "Select", format: @<text><a href="#" onclick="setProject('@item.depm_code','@item.depm_desc');" + style="color: blue;text-decoration: underline;">Select</a></text>),
                     webGrid.Column("depm_code", "ProjCode"),
                     webGrid.Column("depm_desc", "ProjectName")))
            </div>

        </form>
    </div>

</body>



</html>
