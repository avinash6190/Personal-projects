@model FXSupplierPortal.PO
@using (Ajax.BeginForm("ChangePOStatus", "PO", null, new AjaxOptions() { OnSuccess = "getPOChangeStatus", HttpMethod = "post" }, new { id = "lnkChangeStatus" }))
{
    <div id="divPOChangeStatusRequiredFieldError" style="display:none" class="alert alert-danger">
        @Html.ValidationSummary(false, "", new { @id = "validationSummaryErrors", @class = "text-danger" })
        <button id="btnPOChangeStatusClose" type="button" class="close" aria-hidden="true">&times;</button>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            @Html.HiddenFor(model => model.POREVISION)
            @Html.HiddenFor(model => model.prevPOStatus)
            @*@Html.HiddenFor(model => model.OrgCode)*@

            <label class="control-label col-sm-3 Pdringtop" for="inputName">
                PO Number
            </label>
            <div class="col-sm-8">
                @Html.EditorFor(model => model.PONUM, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3 Pdringtop" for="inputName" id="Label2" runat="server">
                Status
            </label>
            <div class="col-sm-8">
                @Html.EditorFor(model => model.STATUS, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3 Pdringtop" for="inputName">
                <span class="showAstrik">*</span>
                New Status
            </label>
            <div class="col-sm-8">
                @Html.DropDownListFor(model => model.poStatusTypes, (IEnumerable<SelectListItem>)ViewData["POStatusTypesList"], "", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3 Pdringtop" for="inputName">
                Memo
            </label>
            <div class="col-sm-8">
                @Html.TextAreaFor(model => model.REVCOMMENTS, new { style = " width:300px !important;height:60px !important", htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3 Pdringtop" for="inputName">
                <span class="showAstrik">*</span>
                Specify a file
            </label>
            <div class="col-sm-8">
                <input id="AttachmentId" type="file" name="FileUpload" />
            </div>
        </div>
        @*</div>*@
        <div class="form-group" align="right" style="margin-right:45px!important">
            <input id="btnChangePOStatus" type="submit" value="Submit" class="btn btn-primary" />
        </div>

    </div>
}

@Scripts.Render("~/Scripts/Custom/PO.js")


