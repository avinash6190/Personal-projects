
@model IEnumerable<FXSupplierPortal.FIRMS_GetAllEmployee_Result>

@{
            ViewBag.Title = "Purchase Order";
            Layout = null;
            WebGrid webGrid = new WebGrid(source: Model.ToList(), canPage: false, selectionFieldName: "emp_name", canSort: false);
}


<script src="~/Scripts/jquery.dataTables.js"></script>
<link href="~/Content/jquery.dataTables.css" rel="stylesheet" />
@Styles.Render("~/Content/webgridstyle.css")
@Scripts.Render("~/bundles/jqueryui")


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Select Users from the list</title>
    <script>
        $(document).ready(function () {

            $("#UserWebGrid").dataTable().fnDestroy();
            $("#UserWebGrid thead").find("tr:gt(0)").remove();
            $('#UserWebGrid thead tr').clone(true).appendTo('#UserWebGrid thead');

            $('#UserWebGrid thead tr:eq(1) th').each(function (i) {
                var title = $(this).text();
                if (i == 0) {
                    $(this).html('<input type="text" style="display:none; width:100%; font-size:11px;" placeholder=" ' + title + '" />');
                    $(this).removeClass('sorting_asc');
                }
                else {
                    $(this).html('<input type="text" style="width:100%; font-size:11px;" placeholder=" ' + title + '" />');
                }
                $('input', this).on('keyup change', function () {
                    if (table.column(i).search() !== this.value) {
                        table.column(i).search(this.value).draw();
                    }
                });
            });
            
            var table = $('#UserWebGrid').DataTable({
                orderCellsTop: true,
                fixedHeader: true
                
                //"bDestroy": true
                //Ordering: false
            });
        });

        setTimeout(function () {
            $("#userWebGridDiv").show();
        }, 100);

        function setUsers(empCode, empName) {
            if ($("#GetUsers").dialog('option', 'title') == "User List") {
                $("#po_BUYERNAME").val(empName);
                $("#po_BUYERCODE").val(empCode);
            }
            else {
                $("#REQUESTEDBYNAME").val(empName);
            }
            $("#GetUsers").dialog('close');
        }
    </script>
</head>

<body>
    <div id="userWebGridDiv" style="display:none">
        <form id="myForm">
            <div id="GetUsers">
                @webGrid.GetHtml(
               htmlAttributes: new { @id = "UserWebGrid" },
               tableStyle: "webgrid-table",
               headerStyle: "webgrid-header",
               footerStyle: "webgrid-footer",
               alternatingRowStyle: "webgrid-alternating-row",
               selectedRowStyle: "webgrid-selected-row",
               rowStyle: "webgrid-row-style",
               mode: WebGridPagerModes.All,
               columns: webGrid.Columns(
                    webGrid.Column("Select", "Select", format: @<text><a href="#" onclick="setUsers('@item.emp_code','@item.emp_name');" + style="color: blue;text-decoration: underline;">Select</a></text>),
                                 webGrid.Column("emp_code", "Emp Code"),
                                 webGrid.Column("emp_name", "Employee Name")
                             ))
            </div>

        </form>
        </div>

</body>
</html>

